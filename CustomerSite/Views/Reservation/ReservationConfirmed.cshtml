@model Reservation

<h2 class="text-center">Thank you, @Model.Customer.FirstName!</h2>
<p class="text-center">
    Your reservation for bike @Model.BikeId has been requested.
    An email has been sent to <em>@Model.Customer.EmailAddress</em>
</p>
<p class="text-center">
    <a asp-controller="Home" asp-action="Index"
        class="btn btn-primary rounded-pill">
        <strong>Reserve More Bikes!</strong>
    </a>
</p>
