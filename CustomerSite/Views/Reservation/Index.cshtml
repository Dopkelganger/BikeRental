@model ReservationViewModel
@{ 
    string reserveButtonClass = Model.Bike.Available ? "btn-success" : "btn-warning";
    string reserveButtonText = Model.Bike.Available ? "Reserve Now!" : "Check Availability";
    bool hasAllTerrain = Model.Bike.AllTerrainSuspension ?? false;
    bool hasElectric = Model.Bike.ElectricMotor ?? false;
}

<div class="row align-items-center">
    <div class="col-8">
        <div class="carousel slide" data-ride="carousel" id="bikeCarousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="https://via.placeholder.com/700x400/FFB6C1/000000" class="img-fluid" />
                </div>
                <div class="carousel-item">
                    <img src="https://via.placeholder.com/700x400/87CEFA/000000" class="img-fluid" />
                </div>
                <div class="carousel-item">
                    <img src="https://via.placeholder.com/700x400/B0C4DE/000000" class="img-fluid" />
                </div>
            </div>
            <a class="carousel-control-prev" href="#bikeCarousel" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon"></span>
            </a>
            <a class="carousel-control-next" href="#bikeCarousel" role="button" data-slide="next">
                <span class="carousel-control-next-icon"></span>
            </a>
        </div>
    </div>
    <div class="col">
        <table class="table table-bordered table-striped">
            <thead class="thead-dark">
                <tr>
                    <th colspan="2">Bike Title Here</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <th scope="row">All terrain</th>
                    <td>@(hasAllTerrain ? "Yes" : "No")</td>
                </tr>
                <tr>
                    <th scope="row">Electric motor</th>
                    <td>@(hasElectric ? "Yes" : "No")</td>
                </tr>
                <tr>
                    <th scope="row">Frame size</th>
                    <td>@Model.Bike.FrameSize</td>
                </tr>
                <tr>
                    <th scope="row">Style</th>
                    <td>@Model.Bike.BikeStyle</td>
                </tr>
            </tbody>
            <tfoot>
                <tr>
                    <th colspan="2">
                        <button type="button" data-toggle="modal" data-target="#guestContact"
                                class="btn @reserveButtonClass rounded-pill">
                            <strong>@reserveButtonText</strong>
                        </button>
                    </th>
                </tr>
            </tfoot>
        </table>
    </div>
</div>

<div class="modal fade" id="guestContact" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="guestContactTitle">
                    Please fill out the information below
                </h5>
            </div>
            <div class="modal-body">
                <partial name="_ContactInfoPartial" model="@Model.Customer" />
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="submit" form="guestContactForm" class="btn btn-primary">Request reservation</button>
            </div>
        </div>
    </div>
</div>

