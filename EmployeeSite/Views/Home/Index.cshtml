@model IEnumerable<Reservation>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4 pb-4">Welcome To the Bike Rental Agency!</h1>
    <h3 class="text-left">Browse: </h3>
    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <form asp-controller="Home" asp-action="Index">
        @*<p>

            <select asp-for="" asp-items="">
                <option value="">All</option>
            </select>

            Title: <input type="text" asp-for="SearchString" />
            <input type="submit" value="Filter" />
        </p>*@
    </form>

    @if (Model.Any())
    {
        <table class="table table-hover">
            <thead class="thead-dark">
                <tr>
                    <th scope="col"></th>
                    <th scope="col"></th>
                    <th scope="col">Customer</th>
                    <th scope="col">Bike Id, Style</th>
                    <th scope="col">Current Store, Owning Store</th>
                    <th scope="col">Date Reserved</th>
                    <th scope="col">Date Returned</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Reservation res in Model)
                {
                    <tr>
                        <th scope="row">
                            <a asp-controller="Home" asp-action=""
                               class="btn btn-outline-success text-white bg-success rounded-pill">
                                Edit
                            </a>
                        </th>
                        <th scope="row">
                            <a asp-action="Delete" asp-route-id="@res.Id"
                               class="btn btn-outline-success text-white bg-danger rounded-pill">
                                Delete
                            </a>
                        </th>
                        <td>@res.Customer.LastName</td>
                        <td>@res.BikeId, @res.Bike.BikeStyle</td>
                        <td>@res.CurrentStoreId, @res.Bike.OwningStoreId</td>
                        <td>@res.DateReserved</td>
                        <td>@res.DateReturned</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <h3 class="text-center">No bikes available, go away please</h3>
    }
</div>
